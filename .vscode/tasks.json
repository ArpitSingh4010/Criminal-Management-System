{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Web App",
            "type": "shell",
            "command": "ant",
            "args": ["war"],
            "options": {
                "cwd": "${workspaceFolder}/Criminal Mangement"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "ant",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/Criminal Mangement"
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Deploy JSP",
            "type": "shell",
            "command": "Copy-Item \"${workspaceFolder}/Criminal Mangement/src/main/webapp/*.jsp\" \"C:/apache-tomcat-10.1.52/webapps/criminal/\" -Force",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}
